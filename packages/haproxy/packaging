#!/usr/bin/env bash

set -eux

mkdir -p "${BOSH_INSTALL_TARGET}/bin"

pushd src/pcre2
  ./autogen.sh
  ./configure \
    --prefix "${BOSH_INSTALL_TARGET}" \
    --enable-jit
  make install
popd

pushd src/socat
  autoconf
  ./configure \
    --prefix "${BOSH_INSTALL_TARGET}"
  make install
popd

pushd src/hatop
  install bin/hatop "${BOSH_INSTALL_TARGET}"
popd

pushd src/ttar
  install ttar "${BOSH_INSTALL_TARGET}/bin"
popd

pushd src/haproxy
  make \
    TARGET=linux-glibc \
    USE_PROMEX=1 \
    USE_OPENSSL=1 \
    USE_PCRE2=1 \
    USE_PCRE2_JIT=yes \
    USE_STATIC_PCRE2=1 \
    USE_ZLIB=1 \
    PCRE2DIR="${BOSH_INSTALL_TARGET}"
  install haproxy "${BOSH_INSTALL_TARGET}/bin/"
popd
